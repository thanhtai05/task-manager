PORT=8000
NODE_ENV=development

# Prefer IPv4 to avoid ::1 issues on Windows
MONGO_URI=mongodb://127.0.0.1:27017/task_manager

SESSION_SECRET=""
SESSION_EXPIRES_IN="1d"

GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

FRONTEND_ORIGIN=http://localhost:3000
FRONTEND_GOOGLE_CALLBACK_URL=http://localhost:3000/google/callback

# Seeding toggles for development
SEED_DEMO_COUNT=100
SEED_MULTI_ENABLE=false

# Use in-memory MongoDB if local DB is unavailable (dev only)
MONGO_USE_MEMORY=false
# Expose fixed port for in-memory Mongo so Compass can connect
MONGO_MEMORY_PORT=27017
# Persist in-memory data across restarts (optional)
MONGO_MEMORY_DBPATH=.mongo-memory